#!/usr/bin/python

import numpy as np

def get_trans(a,b,time,duration):

    listener.waitForTransform(a, b,time, duration)
    (trans,rot)=listener.lookupTransform(a, b, time)
    
    return trans
    
def get_theta(a,b):
    
    length_a=np.sqrt(list(a)[0]**2+list(a)[1]**2+list(a)[2]**2)
    length_b=np.sqrt(list(b)[0]**2+list(b)[1]**2+list(b)[2]**2)
    dotproduct=list(a)[0]*list(b)[0]+list(a)[1]*list(b)[1]+list(a)[2]*list(b)[2]
    theta=np.arccos(dotproduct/length_a/length_b)
    
    return theta 
    
    
    
